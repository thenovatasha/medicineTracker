{
  "compilerOptions": {
    "target": "ES6", // Use 'esnext' for the latest ECMAScript features
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true, // Ensure this is enabled
    "allowSyntheticDefaultImports": true, // Ensure this is enabled
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ES6", // Use 'esnext' for ES module support
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
  },
  "include": ["src"],
  "exclude": ["dist"]
}